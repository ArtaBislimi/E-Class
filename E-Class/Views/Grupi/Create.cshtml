@model E_Class.Models.Class_Model.Grupi

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2>Krijo Grupin</h2>
<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Grupi</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.EmriGrupi, htmlAttributes: new { @class = "col-md-12" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.EmriGrupi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EmriGrupi, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.VitiAkademik, htmlAttributes: new { @class = "col-md-12" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.VitiAkademik, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.VitiAkademik, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group col-md-12 ">
            <div class="col-md-offset-2 col-md-10">

                @Html.ActionLink("Cancel", "Index", "Grupi", new { @class = "btn btn-default pull-right" })
                <input type="submit" value="Save" class="btn btn-success pull-right" style="margin-right:3px;" />
            </div>
        </div>
    </div>
}
@model  E_Class.Models.Class_Model.Salla
@{
    ViewBag.Title = "Create";
}
    <br />
<h2>Krijo Sallen</h2>
<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Sallat</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.NumriSalles, htmlAttributes: new { @class = "col-md-12" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.NumriSalles, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NumriSalles, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.Tipi, htmlAttributes: new { @class = "col-md-12" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.Tipi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tipi, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group col-md-12 ">
            <div class="col-md-offset-2 col-md-10">

                @Html.ActionLink("Cancel", "Index", "Grupi", new { @class = "btn btn-default pull-right" })
                <input type="submit" value="Save" class="btn btn-success pull-right" style="margin-right:3px;" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}